{{> header}}

<h1>Word Searcher</h1>

<form id="form" method="post" action="/" modelAttribute="query">
    <input type="search" name="query"/>
    <input type="submit" value="Search"/>
</form>

{{#has_results}}
    <h2>Search results</h2>
    <ul>
        {{#results}}
            <li>{{.}}</li>
        {{/results}}
    </ul>
    {{^results}}
        No texts were found
    {{/results}}
{{/has_results}}

{{> footer}}